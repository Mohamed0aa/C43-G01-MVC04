@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}
<div class="main-w3layouts wrapper">
	<h1>Creative SignUp Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<div asp-validation-summary="All"></div>
			<form asp-action="SignIn">
				<input class="text email" asp-for="Email" placeholder="Email" required="">
				<span asp-validation-for="Email" class="text-danger"></span>

				<input class="text" asp-for="Password" placeholder="Password" required="">
				<span asp-validation-for="Password" class="text-danger"></span>

				<div class="wthree-text">
					<label class="anim">
						<input type="checkbox" asp-for="RemmberMe" class="checkbox" >
						<span>Remmber me</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNIN">
			</form>
			<p>Don't have an Account? <a asp-action="SignUp"> Create Account</a></p>
		</div>
	</div>

	@section validate {

		<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
		<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
	}


