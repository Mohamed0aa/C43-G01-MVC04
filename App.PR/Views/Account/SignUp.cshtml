@model SignUpDto
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}
<div class="main-w3layouts wrapper">
	<h1>Creative SignIn Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<div asp-validation-summary="All"></div>
			<form asp-action="SignUp">
				<input class="text" asp-for="UserName" placeholder="Username" required="">
				<span asp-validation-for="UserName" class="text-danger"></span>

				<input class="text" asp-for="FirstName" placeholder="FirstName" required="">
				<span asp-validation-for="FirstName" class="text-danger"></span>

				<input class="text" asp-for="LastName" placeholder="LastName" required="">
				<span asp-validation-for="LastName" class="text-danger"></span>

				<input class="text email" asp-for="Email"  placeholder="Email"  required="">
				<span asp-validation-for="Email" class="text-danger"></span>

				<input class="text" asp-for="Password" placeholder="Password" required="">
				<span asp-validation-for="Password" class="text-danger"></span>

				<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				<div class="wthree-text">
					<label class="anim">
						<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNUP">
			</form>
			<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
		</div>
	</div>

	@section validate {

		<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
		<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
	}
