@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-outline-primary">Create</a>
<br />
<br />
@if(Model.Count()>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" class="btn btn-outline-secondary">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" class=" btn btn-outline-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class=" btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-primary" role="alert">
        <h4>Table is Empty</h4>
    </div>
}